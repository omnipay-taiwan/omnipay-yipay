{
    "name": "omnipay-taiwan/omnipay-yipay",
    "description": "yipay driver for the Omnipay payment processing library",
    "keywords": [
        "omnipay",
        "yipay"
    ],
    "homepage": "https://github.com/omnipay-taiwan/omnipay-yipay",
    "license": "MIT",
    "authors": [
        {
            "name": "recca0120",
            "email": "recca0120@gmail.com",
            "homepage": "https://github.com/recca0120"
        }
    ],
    "require": {
        "omnipay/common": "^3.0",
        "phpseclib/phpseclib": "^3.0"
    },
    "require-dev": {
        "omnipay/tests": "^3.0|^4.0",
        "squizlabs/php_codesniffer": "^3"
    },
    "autoload": {
        "psr-4": {
            "Omnipay\\YiPAY\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Omnipay\\YiPAY\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 src/",
        "fix-style": "phpcbf -p --standard=PSR2 src/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "php-http/discovery": false
        }
    }
}
